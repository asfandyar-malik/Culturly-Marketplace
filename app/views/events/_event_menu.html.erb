<ul class="sidebar-list">
    <li class="sidebar-item">
        <%= link_to "Listing", listing_event_path, class: "sidebar-link active" %>
        <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    </li>
    <li class="sidebar-item">
        <%= link_to "Pricing", pricing_event_path, class: "sidebar-link active" %>
        <% if !@event.price.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
        <% end %>
    </li>
    <li class="sidebar-item">
        <%= link_to "Description", description_event_path, class: "sidebar-link active" %>
        <% if !@event.listing_name.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
        <% end %>
    </li>
    <li class="sidebar-item">
        <%= link_to "Photos", photo_upload_event_path, class: "sidebar-link active" %>
        <% if !@event.photos.blank? %>
            <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
        <% end %>
    </li>
    <li class="sidebar-item">
        <%= link_to "Amenities", amenities_event_path, class: "sidebar-link active" %>
        <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    </li>
    <li class="sidebar-item">
        <%= link_to "Location", location_event_path, class: "sidebar-link active" %>
        <% if !@event.address.blank? %>
            <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
        <% end %>
    </li>
</ul>
<hr/>

<% is_ready = !@event.active && !@event.price.blank? && !@event.listing_name.blank? && !@event.photos.blank? && !@event.address.blank? %>

<%= form_for @event do |f| %>
    <%= f.hidden_field :active, value: true %>
    <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
<% end %>
