<% events.each do |event| %>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading preview">
                <%= image_tag event.cover_photo(:medium) %>
            </div>
            <div class="panel-body">
                <%= link_to event.listing_name, event %><br/>
                $<%= event.price %> - <%= event.home_type %> - <%= pluralize(event.bed_room, "bed") %>
                <div id="star_<%= event.id %>"></div> <%= pluralize(event.average_rating, "review") %>
            </div>
        </div>
    </div>
    
    <script>
        $('#star_<%= event.id %>').raty({
            path: '/assets',
            readOnly: true,
            score: <%= event.average_rating %>
        });
    </script>
<% end %>
